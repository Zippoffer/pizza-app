extends partials/layout.pug

block content
	body.c


			h1 LOGIN
			if error
				h2= error
			


			.login-form
				form(method="POST")
					.form-group
						label(for='email') Email Address
						input.form-control#email(type='email',name = 'email', placeholder='you@example.com')
					.form-group
						label(for='password') Password
						input.form-control#password(type='password',name = 'password' placeholder='*************')
					.password-form__submit
						a.btn.btn-danger.btn-lg(href="/password") Cancel
						input.btn.btn-success.btn-lg(type='submit' value='Submit')

						
