extends partials/layout.pug

block content
	body.c

	.contact

			h1 what am I doing here???
			

			img.c(src='https://s-media-cache-ak0.pinimg.com/236x/a6/17/7a/a6177a0244fac4a1bf149796680caf82.jpg' height="300" width="300")


			.contact-form
				form(method="POST")
					.form-group
						label(for='name') Name
						input.form-control#name(type='text',name = "name", placeholder='John Doe')
					.form-group
						label(for='email') Email Address
						input.form-control#email(type='email',name = 'email address', placeholder='you@example.com')
					.form-group
						label(for='phone') Phone Number
						input.form-control#phone(type='phone',name = 'phone number' placeholder='234-567-8901')
					.form-group
						label(for='message') Message
						textarea.form-control#message(rows=5,name = 'message' placeholder='What\'s the secret ingredient?')
					.contact-form__submit
						a.btn.btn-danger.btn-lg(href="/contact") Cancel
						input.btn.btn-success.btn-lg(type='submit' value='Submit')

						
